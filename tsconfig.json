{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "components": ["components"],
      "services": ["services"],
      "helpers": ["helpers"],
      "store": ["store"]
    }
  },
  "exclude": ["node_modules"]
}
