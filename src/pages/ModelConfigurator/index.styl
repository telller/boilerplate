.ModelConfigurator
  .contentWrapper
    display flex
    flex-direction column
    height 100vh
    @media large
      flex-direction row
    .content
      background-color #f1f3f2
      display flex
      flex-direction column
      width 100%
      padding 32px 16px
      @media large
        padding 220px 32px 60px
        width 65%
      .carPreview
        width 100%
        object-fit contain
      .carInfo
        font-size 16px
        color #000
        font-weight 700
        line-height normal
        text-align center
        padding 10px
        .type, .color
          font-weight 400
        .color
          font-size 14px
          margin-top 2px
        @media large
          font-size 22px
          padding 60px 40px
          text-align left
          position absolute
          left 0
          top 0
          .color
            font-size 16px
      .carPrice
        font-size 14px
        font-weight 700
        text-align center
        @media large
          font-size 22px
          margin-top auto
    .sidebar
      display flex
      flex-direction column
      justify-content space-between
      overflow-y auto
      width 100%
      @media large
        width 35%

